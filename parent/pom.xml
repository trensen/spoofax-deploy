  <modelVersion>4.0.0</modelVersion>
  <groupId>org.metaborg</groupId>
  <artifactId>parent</artifactId>
  <version>2.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>${project.groupId}:${project.artifactId}</name>
  <description>Maven parent POM for all projects</description>
  <url>https://github.com/metaborg/spoofax-deploy</url>

  <properties>
    <metaborg-version>2.0.0-SNAPSHOT</metaborg-version>
    <metaborg-baseline-version>1.5.0-baseline-20150917-172646</metaborg-baseline-version>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <manifest-location>META-INF</manifest-location>
    <forceContextQualifier>qualifier</forceContextQualifier>
    <deployFileUrl>${project.distributionManagement.snapshotRepository.url}</deployFileUrl>
    <deployRepositoryId>metaborg-nexus</deployRepositoryId>

    <metaborg-meta-lang-scope>compile</metaborg-meta-lang-scope>

    <java-version>1.7</java-version>
    <maven-eclipse-compiler-version>2.5</maven-eclipse-compiler-version>
    <maven.version>3.3.9</maven.version>
  </properties>

  <repositories>
    <!-- Pluto and SugarJ repositories for Pluto and dependencies -->
    <repository>
      <id>pluto-build</id>
      <url>https://raw.githubusercontent.com/pluto-build/pluto-build.github.io/master/mvnrepository/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>sugar-lang</id>
      <url>http://sugar-lang.github.io/mvnrepository/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>

    <!-- MetaBorg repository to activate resolution for Maven core extensions -->
    <repository>
      <id>metaborg-release-repo</id>
      <url>http://artifacts.metaborg.org/content/repositories/releases/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

